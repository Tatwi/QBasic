CLS

GOSUB GETSENTENCE
GOSUB PAIRS
END

GETSENTENCE:
CLS
COLOR (3)
PRINT "ENTER SENTENCE"
DO
  A$ = INKEY$
  IF A$ = CHR$(13) THEN EXIT DO
  PRINT A$;
  S$ = S$ + A$
LOOP
RETURN

PAIRS:
PRINT
COLOR (2)
L = LEN(S$)
FOR X = 1 TO L
   IF MID$(S$, X, 1) = MID$(S$, X + 1, 1) THEN C = C + 1
NEXT X
PRINT "THERE ARE "; C; " PAIRS"
RETURN

