DIM DCB$(15)
DIM DCF$(15)
CLS
FOR X = 1 TO 15
   READ DCF$(X), DCB$(X)
NEXT X
GOSUB INTRO
GOSUB MENU
END

INTRO:
 CLS
 COLOR 13: PRINT "PRESS ANY KEY TO CONTINUE": SLEEP 2
 DO
 FOR Y = 1 TO 3
 CLS
 FOR X = 1 TO 75
    L1 = INT(22 * RND + 1)
    L2 = INT(70 * RND + 1)
    S = INT(14 * RND + 1)
    B = INT(15 * RND + 1)
    COLOR S: LOCATE L1, L2
    PRINT "*"
    PRINT
  NEXT X
 IF INKEY$ <> "" THEN EXIT DO
 NEXT Y
 IF B = 6 THEN B = B + 1
 LOCATE L1, L1: PRINT "HELLO": FOR T = 1 TO 500: NEXT T
 COLOR , B
 LOOP WHILE A$ = ""
RETURN



PINGPONG:
A$ = "0"
COLOR S, B
CLS
LOCATE 12, 40
PRINT "*";
DO
  B$ = INKEY$
  IF B$ <> "" THEN A$ = B$
   FOR X = 1 TO 50: NEXT X
  IF A$ = "6" THEN GOSUB RIGHT
  IF A$ = "4" THEN GOSUB LEFT
  IF A$ = "2" THEN GOSUB DOWN
  IF A$ = "8" THEN GOSUB UP
  IF A$ = "3" THEN GOSUB DIAGONALDR
  IF A$ = "1" THEN GOSUB DIAGONALDL
  IF A$ = "9" THEN GOSUB DIAGONALUR
  IF A$ = "7" THEN GOSUB DIAGONALUL
  IF A$ = CHR$(67) THEN GOTO COLORCHANGE
  LOOP UNTIL A$ = CHR$(27)
GOTO MENU
RETURN
LEFT:
  PRINT CHR$(29); " "; CHR$(29); CHR$(29); "*";
RETURN

DOWN:
  PRINT CHR$(29); " "; CHR$(31); CHR$(29); "*";
RETURN

UP:
  PRINT CHR$(29); " "; CHR$(30); CHR$(29); "*";
RETURN

RIGHT:
  PRINT CHR$(29); " *";
RETURN

DIAGONALDR:
  PRINT CHR$(29); " "; CHR$(31); "*";
RETURN

DIAGONALDL:
  PRINT CHR$(29); " "; CHR$(31); CHR$(29); CHR$(29); "*";
RETURN

DIAGONALUR:
  PRINT CHR$(29); " "; CHR$(30); "*";
RETURN

DIAGONALUL:
  PRINT CHR$(29); " "; CHR$(30); CHR$(29); CHR$(29); "*";
RETURN
END
RETURN

COLORCHANGE:
 CLS
 PRINT "FORGROUND", "BACKGROUND"
 FOR X = 1 TO 15
    PRINT DCF$(X), DCB$(X)
 NEXT X
DATA 0 BLACK ,
DATA 1 BLUE, 1 BLUE
DATA 2 GREEN, 2 GREEN
DATA 3 LIGHT BLUE, 3 LIGHT BLUE
DATA 4 RED, 4 RED
DATA 5 PURPLE, 5 PURPLE
DATA 6 BROWN, 6 BROWN
DATA 7 WHITE, 7 GRAY
DATA 8 GRAY, 8 BLACK
DATA 9 WIERD BLUE,
DATA 10 LIGHT GREEN,
DATA 11 CYAN,
DATA 12 PINK,
DATA 13 LIGHT PINK,
DATA 14 YELLOW,
 INPUT "NUMBER OF NEW FORGROUND COLOUR"; S
 INPUT "NUMBER OF NEW BACKGROUND COLOUR"; B
 GOSUB PINGPONG
RETURN

MENU:
 DO
  CLS
  PRINT TAB(20); "MENU"
  PRINT "1   PLAY GAME"
  PRINT "2   CHANGE COLOURS"
  PRINT "3   EXIT"
  PRINT
  COLOR 13: PRINT "TO CHANGE COLOURS DURING GAME PRESS C"
  COLOR 14: PRINT "EXIT GAME AND RETURN TO MENU PRESS ESC"
  COLOR 17: PRINT "TO STOP THE STAR DURING THE GAME PRESS 5": COLOR S
  DO
    A$ = INKEY$
  LOOP WHILE A$ = ""
  IF A$ = "3" THEN EXIT DO
  ON VAL(A$) GOSUB PINGPONG, COLORCHANGE
 LOOP
 END
RETURN

