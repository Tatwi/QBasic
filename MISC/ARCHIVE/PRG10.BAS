CLS

INPUT "MONTH"; M$
INPUT "DAYS"; D
INPUT "START ON DAY"; S
CLS
PRINT TAB(10); M$
COLOR (23)
PRINT " SUN  MON  TUE  WED  THU  FRI  SAT "
COLOR (3)
FOR X = 1 TO S - 1
