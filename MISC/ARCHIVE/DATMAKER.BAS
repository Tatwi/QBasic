CLS
GOSUB ENTER
GOSUB PRINTDISK
END

STARTNEW:
  NR = 0
RETURN

ENTER:
  CLS
  PRINT "EOF IS XXX"
  PRINT
  DO
    NR = NR + 1
    INPUT "ENTER MONTH"; M$(NR)
    IF N$(NR) = "XXX" THEN EXIT DO
    INPUT "ENTER YEAR"; Y(NR)
    INPUT "ENTER PAY"; P(NR)
  LOOP
  NR = NR - 1
RETURN

PRINTDISK:
  INPUT "WHAT IS DATA DRIVE"; D$
  INPUT "WHAT IS DATA DIRECTORY"; DIR$
  INPUT "WHAT IS FILE NAME"; F$
  DATA$ = D$ + DIR$ + F$
  OPEN DATA$ FOR OUTPUT AS #1

  FOR X = 1 TO NR
     PRINT #1, N$(X)
     PRINT #1, N(X)
     PRINT #1, P(X)
  NEXT X
  CLOSE #1
RETURN



