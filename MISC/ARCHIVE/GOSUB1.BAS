DIM N$(50)

CLS
GOSUB READDATA
GOSUB PRINTDATA
GOSUB SORT
GOSUB PRINTDATA
END

READDATA:
  DO
    NR = NR + 1
    READ N$(NR), N(NR)
    IF N$(NR) = "XXX" THEN EXIT DO
  LOOP
  NR = NR - 1

  DATA SAM, 11
  DATA BOB, 15
  DATA MARY, 11
  DATA JANE, 14
  DATA FRED, 13
  DATA XXX, 0
  
RETURN


PAUSE:
  COLOR (12): PRINT : PRINT "PRESS ANY KEY TO CONTINUE"
  DO
  LOOP WHILE INKEY$ = ""
RETURN

PRINTDATA:
  CLS
  COLOR (14): PRINT "NAMES", "AGE": COLOR (7)
  FOR X = 1 TO NR
     PRINT N$(X), N(X)
  NEXT X
  GOSUB PAUSE
RETURN


SORT:
  CLS
  LOCATE 11, 17
  COLOR (4): PRINT "ONE MOMENT PLEASE.    SORTING": SLEEP 2
  FOR Y = 1 TO NR - 1
     F = 0
     FOR X = 1 TO NR - Y
        IF N$(X) > N$(X + 1) THEN
          SWAP N$(X), N$(X + 1)
          SWAP N(X), N(X + 1)
          F = 1
        END IF
     NEXT X
     IF F = 0 THEN EXIT FOR
  NEXT Y
F = 0
RETURN

