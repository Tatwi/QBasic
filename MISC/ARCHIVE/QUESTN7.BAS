GOSUB READDISK
GOSUB PRINTDATA
END

READDISK:
  CLS
  INPUT "WHAT IS DATA DRIVE"; D$
  INPUT "WHAT IS DATA DIRECTORY"; DIR$
  INPUT "WHAT IS FILE NAME"; F$
  DATA$ = D$ + DIR$ + F$
  OPEN DATA$ FOR INPUT AS #1
  DO WHILE NOT EOF(1)
    NR = NR + 1
    INPUT #1, N$(NR), A(NR)
  LOOP
  CLOSE #1
RETURN

PAUSE:
  PRINT : PRINT "PRESS ANY KEY TO CONTINUE"
  DO
  LOOP WHILE INKEY$ = ""
RETURN

PRINTDATA:
  CLS
  PRINT "NAMES"
  FOR X = 1 TO NR
     PRINT N$(X), A(X)
  NEXT X
  GOSUB PAUSE
RETURN

