REM DATA BASE//QUESTION FOUR

DIM N$(50)
COLOR 3, 1, 5

REM MENU
DO
COLOR (3)
CLS
PRINT TAB(30); "MY DATA BASE"
PRINT : PRINT
PRINT : PRINT TAB(10); "1   ENTER DATA"
PRINT : PRINT TAB(10); "2   PRINT DATA"
PRINT : PRINT TAB(10); "3   SORT DATA"
PRINT : PRINT TAB(10); "4   START NEW DATA FILE"
PRINT : PRINT TAB(10); "Q   QUIT"
PRINT : PRINT : PRINT "PRESS ANY KEY TO CONTINUE"

DO
  A$ = INKEY$
LOOP WHILE A$ = ""

IF A$ = "Q" OR A$ = "q" THEN EXIT DO
ON VAL(A$) GOSUB ENTER, PRINTDATA, SORT, STARTNEW
LOOP
END



STARTNEW:
  NR = 0
RETURN

ENTER:
  CLS
  PRINT "EOF IS XXX"
  PRINT
  DO
    NR = NR + 1
    INPUT "ENTER NAME"; N$(NR)
    IF N$(NR) = "XXX" THEN EXIT DO
  LOOP
  NR = NR - 1
RETURN


SORT:
  CLS
  PRINT "ONE MOMENT PLEASE.    SORTING"
  FOR Y = 1 TO NR - 1
     F = 0
     FOR X = 1 TO NR - Y
        IF N$(X) > N$(X + 1) THEN
          SWAP N$(X), N$(X + 1)
          F = 1
        END IF
     NEXT X
     IF F = 0 THEN EXIT FOR
  NEXT Y
F = 0
RETURN

PAUSE:
  LOCATE 12, 23
  COLOR (12)
  PRINT "PRESS ANY KEY TO CONTINUE"
  DO
  LOOP WHILE INKEY$ = ""
RETURN

PRINTDATA:
  CLS
  PRINT ; TAB(15); "NAMES"
  PRINT
  FOR X = 1 TO NR
     PRINT ; TAB(15); N$(X)
  NEXT X
  GOSUB PAUSE
RETURN

