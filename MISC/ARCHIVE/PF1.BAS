REM PRINT FORMAT QUESTION ONE

CLS
FD$ = "\     \   ###        ###        $$####.##          $$#####.##"
FT$ = "\   \     \    \      \    \       \       \            \     \"

GOSUB READDISK
GOSUB PRINTDATA
GOSUB HOURS
GOSUB PRINTDATA
GOSUB PRINTTOPRINTER
END

READDISK:
  CLS : PRINT : COLOR 5: PRINT "    READING DISK": COLOR 7: PRINT : PRINT
  INPUT "WHAT IS DATA DRIVE"; D$
  INPUT "WHAT IS DATA DIRECTORY"; DIR$
  INPUT "WHAT IS FILE NAME"; F$
  DATA$ = D$ + DIR$ + F$
  OPEN DATA$ FOR INPUT AS #1
  DO WHILE NOT EOF(1)
    NR = NR + 1
    INPUT #1, N$(NR)
    INPUT #1, N(NR)
    INPUT #1, P(NR)
  LOOP
  CLOSE #1
RETURN

STARTNEW:
  NR = 0
RETURN

ENTER:
  CLS
  PRINT "EOF IS XXX"
  PRINT
  DO
    NR = NR + 1
    INPUT "ENTER NAME"; N$(NR)
    IF N$(NR) = "XXX" THEN EXIT DO
    INPUT "ENTER EMPLOYEE NUMBER"; N(NR)
    INPUT "ENTER RATE OF PAY"; P(NR)

  LOOP
  NR = NR - 1
RETURN


PAUSE:
  PRINT : PRINT "PRESS ANY KEY TO CONTINUE"
  DO
  LOOP WHILE INKEY$ = ""
RETURN

PRINTDATA:
  CLS
  PRINT USING FT$; "NAME"; "NUMBER"; "HOURS"; "PAYRATE"; "NETPAY"
  FOR X = 1 TO NR
     PRINT USING FD$; N$(X); N(X); H(X); P(X); NET(X)
  NEXT X
  GOSUB PAUSE
RETURN

HOURS:
  PRINT : COLOR 2
 
FOR X = 1 TO NR
  COLOR 2
  PRINT "ENTER HOURS WORKED FOR "; N$(X): INPUT H(X)
NEXT X

FOR X = 1 TO NR
   NET(X) = P(X) * H(X)
NEXT X
COLOR 7
RETURN

PRINTTOPRINTER:
  LOCATE 13, 22: COLOR 13: PRINT "PRINTING TO PRINTER"
  OPEN "LPT1" FOR OUTPUT AS #1
   PRINT #1, USING FT$; "NAME"; "NUMBER"; "HOURS"; "PAYRATE"; "NETPAY"
   FOR X = 1 TO NR
      PRINT #1, USING FD$; N$(X); N(X); H(X); P(X); NET(X)
   NEXT X
  CLOSE #1
  SLEEP 10: COLOR 7
RETURN

