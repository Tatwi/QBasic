GOSUB ENTER
GOSUB PRINTDATA
GOSUB PRINTDISK
END

ENTER:
  CLS
  PRINT "EOF IS XXX"
  PRINT
  DO
    NR = NR + 1
    INPUT "ENTER NAME"; N$(NR)
    INPUT "ENTER AN AGE"; A(NR)
    IF N$(NR) = "XXX" OR A(NR) = 0 THEN EXIT DO
  LOOP
  NR = NR - 1
RETURN

PAUSE:
  PRINT : PRINT "PRESS ANY KEY TO CONTINUE"
  DO
  LOOP WHILE INKEY$ = ""
RETURN

PRINTDATA:
  CLS
  PRINT "NAMES", "AGE"
  FOR X = 1 TO NR
     PRINT N$(X), A(X)
  NEXT X
  GOSUB PAUSE
RETURN

PRINTDISK:
  INPUT "WHAT IS DATA DRIVE"; D$
  INPUT "WHAT IS DATA DIRECTORY"; DIR$
  INPUT "WHAT IS FILE NAME"; F$
  DATA$ = D$ + DIR$ + F$
  OPEN DATA$ FOR OUTPUT AS #1

  FOR X = 1 TO NR
     PRINT #1, N$(X)
     PRINT #1, A(X)
  NEXT X
  CLOSE #1
RETURN






